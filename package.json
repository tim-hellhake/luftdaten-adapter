{
  "name": "luftdaten-adapter",
  "display_name": "Luftdaten",
  "version": "1.0.0",
  "description": "Connect sensors from https://luftdaten.info",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/luftdaten-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/luftdaten-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/luftdaten-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "manifest.json",
    "lib/index.js",
    "lib/luftdaten-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "pollInterval": 300,
      "radius": 5
    },
    "schema": {
      "type": "object",
      "required": [
        "latitude",
        "longitude",
        "pollInterval",
        "radius"
      ],
      "properties": {
        "latitude": {
          "type": "number",
          "title": "The latitude of your position"
        },
        "longitude": {
          "type": "number",
          "title": "The longitude of your position"
        },
        "pollInterval": {
          "type": "number",
          "title": "The poll interval in seconds"
        },
        "radius": {
          "type": "number",
          "title": "The search radius in km"
        }
      }
    }
  },
  "dependencies": {
    "@types/node-fetch": "^2.5.5",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "typescript": "^3.8.3",
    "@types/node": "^13.11.1"
  }
}
